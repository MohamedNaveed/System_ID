function [V] = build_data_mat_ltv(U, y_mat, p, nu, nz, k, no_rollouts)



V = zeros((m+q)*p + m, l);

V(1:nu,:) = reshape(U((k-1)*nu +1: k*nu,:),nu,no_rollouts);

for i = 1:p
   
    V(m + (i-1)*(m+q) + 1: m + i*(m+q),:) = [zeros(m,i) u(:,1:l-i);...
                                            zeros(q,i) y(:,1:l-i)];
    
end



end



